@{
    ViewBag.Title = "Chat";
}
<h2 id="headerconn">Chat</h2>
<style>
.noclose .ui-dialog-titlebar-close {display: none;}
ul
{ padding: 0;
    list-style-type: none;
}

.wordwrap { 
   white-space: pre-wrap;      /* CSS3 */   
   white-space: -moz-pre-wrap; /* Firefox */   
   white-space: -o-pre-wrap;   /* Opera 7 */    
   word-wrap: break-word;      /* IE */
}
</style>
<script src="~/Scripts/angular.min.js"></script>
<div   data-ng-app="moduleApp129" data-ng-controller="UserController" class="container">
    <input type="hidden" id="displayname" />
     <table>
        <tr>            
            <td>
                <textarea rows="5" cols="50" id="message"></textarea>
            </td>
            <td style="vertical-align:top"><input data-ng-click="sendGlobalMessage()" type="button" id="sendmessage" value="Send" /></td>
            <td style="vertical-align:top">&nbsp;<input type="button" id="closeconn" value="Close Connection" /></td>
        </tr>
    </table>
    <br />
    <table style="width:1200px;">
         <tr>
            <td style="width:450px">
                <div id="talks" class="wordwrap" style="padding:10px;margin:auto;overflow: auto;width:450px;height:600px;border-style:solid;border-radius:20px">
                    <ul id="discussion"></ul>
                </div>
            </td>
            <td style="vertical-align:top;width:750px">
                <div id="connectedusers">
                    <ul>
                        <li ng-repeat=" user in users ">
                            <input type="text" style="width:180px" name="username" ng-model="user.Name" />
                            <input type="text" style="width:400px" name="connectionid" ng-model="user.ConnectionId" />
                            <button data-ng-click="sendPrivateMessage(user.ConnectionId,user.Name)">Send Private MSG</button>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    </table>
</div>
    <script src="~/Scripts/AngularCoreApp/appcore.js"></script>
    <br />   
@section scripts {
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
}
<div id="dialog" title="You are going to chat with a friend of yours. Type your nickname please" style="display: none;margin-top: 20px">
  <input type="text"  value="" style="width: 550px;" id="username" />
</div>

