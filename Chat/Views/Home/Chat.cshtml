@{
    ViewBag.Title = "Chat";
}
<h2 id="headerconn">Chat</h2>
<style>
.noclose .ui-dialog-titlebar-close {display: none;}
ul
{
    list-style-type: none;
}
</style>
<script src="~/Scripts/angular.min.js"></script>
<div id="header" data-ng-app="moduleApp129" data-ng-controller="UserController" class="container">
    <table>
        <tr>
            <td><input type="hidden" id="displayname" /></td>
            <td><input type="text" id="message" /></td>
            <td><input data-ng-click="sendGlobalMessage()" type="button" id="sendmessage" value="Send" /></td>
            <td><input type="button" id="closeconn" value="Close Connection" /></td>
        </tr>
    </table>
    <br />
    <div id="connectedusers">
        <ul>
            <li ng-repeat=" user in users ">
                <input type="text" style="width:180px" name="username" ng-model="user.Name" />
                <input type="text" style="width:400px" name="connectionid" ng-model="user.ConnectionId" />
                <button data-ng-click="sendPrivateMessage(user.ConnectionId,user.Name)">Send Private MSG</button>
            </li>
        </ul>
    </div>
    <script src="~/Scripts/AngularCoreApp/appcore.js"></script>
    <br />
    <ul id="discussion"></ul>
</div>
@section scripts {
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
}
<div id="dialog" title="You are going to chat with an operator. Below your user id" style="display: none;margin-top: 20px">
  <input type="text" readonly value="@Model" style="width: 550px;" id="username" />
</div>

