@{
    ViewBag.Title = "Chat";
}
<h2 id="headerconn">Chat</h2>
<style>
    .noclose .ui-dialog-titlebar-close {
        display: none;
    }
</style>
<div class="container">
    <table>
        <tr>
            <td><input type="hidden" id="displayname" /></td>            
            <td><input type="text" id="message" /></td>
            <td><input type="button" id="sendmessage" value="Send" /></td>
            <td><input type="button" id="closeconn" value="Close Connection" /></td>
        </tr>
    </table>
    <br />   
    <div id="connectedusers">
    </div>  
    <br />
<ul id="discussion"></ul>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        function connUsers()
        {
            $.ajax({
                url: "/Home/GetAllConnectedUsers",
                type: "GET",
                cache: false,
                beforeSend: function () { },
                success: function (result) {
                    var list = document.createElement('ul');
                    for (var i = 0; i < result.length; i++) {
                        // Create the list item:
                        var item = document.createElement('li');
                        // Set its contents:
                        item.appendChild(document.createTextNode(result[i]));
                        // Add it to the list:
                        list.appendChild(item);
                    }
                    $("#connectedusers").html(list);
                }
            });
        }
        $(function () {
            setInterval(function () { connUsers() }, 100);
            // Open A Jquery Dialog to confirm the UserName.
            $("#dialog").dialog({
                show: { effect: 'slide', complete: function () { $(this).find("#username").focus(); } },
                open: function (event, ui) { },
                close: function (event, ui) { $('#message').focus(); },
                autoOpen: true,
                height: 200,
                width: 600,
                dialogClass: 'noclose',
                modal: true,
                closeOnEscape: false,
                buttons: {
                    "Confirm User Name": function () {
                        // Reference the auto-generated proxy for the hub.
                        var chat = $.connection.chatHub;
                        // Create a function that the hub can call back to display messages.
                        chat.client.addNewMessageToPage = function (name, message) {
                            // Add the message to the page.
                            $('#discussion').append('<li><strong>' + htmlEncode(name)
                                + '</strong>: ' + htmlEncode(message) + '</li>');
                        };
                        // Start the connection.
                        $.connection.hub.start().done(function () {
                            // This is the right entry point to invoke an Ajax call that resquests all connected users
                           // conn();
                            $('#sendmessage').click(function () {
                                // Call the Send method on the hub.
                                chat.server.sendmessage($('#displayname').val(), $('#message').val());
                                // Clear text box and reset focus for next comment.
                                $('#message').val('').focus();
                            });
                        });
                        $('#displayname').val($('#username').val());
                        $('#headerconn').text($('#username').val() + ":   connected!");
                        $(this).dialog('close');
                    },
                    "Cancel": function () { $(this).dialog('close'); }
                }
            });
            // Set initial focus to message input box.
            $('#message').focus();
            $("#closeconn").click(function () {
                $.connection.hub.stop();
            });            
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
<div id="dialog" title="You are going to chat with an operator. Below your user id" style="display: none;margin-top: 20px">
  <input type="text" readonly value="@Model" style="width: 550px;" id="username" />
</div>

